
<!--
  If you get an "Out of space on device" error, try:
  rmmod uvcvideo
  modprobe uvcvideo quirks=128
  to enable a bandwidth fix. Using the mjpeg pixel format resulted in really bad 
  image corruption with the usb_cam driver. 

  Note that camera_info_url MUST start with "file:///", "flash:///", or "package:///" or else it's not a valid URL. 
  See http://docs.ros.org/indigo/api/camera_info_manager/html/camera__info__manager_8cpp_source.html#l00405

  If you want to see the images and disparity map, you can use:
  rosrun image_view stereo_view _approximate_sync:=True stereo:=/stereo image:=image_rect_color
-->

<launch>
  <node name="cam_2" pkg="usb_cam" type="usb_cam_node" output="screen" >
    <param name="video_device" value="/dev/video0" />
    <param name="image_width" value="1024" />
    <param name="image_height" value="768" />
    <param name="pixel_format" value="yuyv" />
    <param name="camera_frame_id" value="cam_2_frame" />
    <param name="io_method" value="mmap"/>
    <param name="camera_name" value="left"/>
    <param name="camera_info_url" value="file:///$(find scooter_launch)/configs/cal_left.ini"/>
  </node>

  <node name="cam_1" pkg="usb_cam" type="usb_cam_node" output="screen" >
    <param name="video_device" value="/dev/video1" />
    <param name="image_width" value="1024" />
    <param name="image_height" value="768" />
    <param name="pixel_format" value="yuyv" />
    <param name="camera_frame_id" value="cam_1_frame" />
    <param name="io_method" value="mmap"/>
    <param name="camera_name" value="right"/>
    <param name="camera_info_url" value="file:///$(find scooter_launch)/configs/cal_right.ini"/>
  </node>

  <node name="stereo_proc" type="stereo_image_proc" pkg="stereo_image_proc" ns="stereo" output="screen">
  	<remap to="/cam_2/image_raw" from="/stereo/left/image_raw"/>
  	<remap to="/cam_2/camera_info" from="/stereo/left/camera_info"/>
  	<remap to="/cam_1/image_raw" from="/stereo/right/image_raw"/>
  	<remap to="/cam_1/camera_info" from="/stereo/right/camera_info"/>
  	<param name="~approximate_sync" value="true"/>
  </node>
</launch>